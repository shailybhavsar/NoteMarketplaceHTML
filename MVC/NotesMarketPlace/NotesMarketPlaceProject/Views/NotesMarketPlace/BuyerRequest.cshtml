        $(document).ready( function () {
           var table =   $('#buyerrequest').DataTable({
                "pageLength": 5,
                "pagingType": "full_members",
                "paging": false,
                language: {
                    paginate: {
                        next: '<i class="fa fa-angle-right fa-2x"></i>',
                        previous: '<i class="fa fa-angle-left fa-2x"></i>',
                        first: false,
                        last: false
                    }
                },
                bFilter: true,
                ordering: true,
                searching: true,
               "dom": '<"top">rt<"bottom"p>' 
           });
          
            $('.dataTables_length').addClass('bs-select');

            $("#searchbtn").click(function () {
                var x = $("#exampleInput").val();
                table.search(x).draw();
            });
        });
    </script>
    }
</body>
</html>

