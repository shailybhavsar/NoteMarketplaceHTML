                        </div>
                    </li>
                    <li class="nav-item" id="btn">
                        <a class="nav-link" href="#"><button type="submit" class="btn btn-primary btn-block">Logout</button></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!--Navbar Ends-->

    <section class="downloads">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-12" id="buyer">
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-12" id="heading">
                            <h3>Buyer Requests</h3>
                        </div>

                        <div class="col-md-6 col-sm-6 col-12">
                            <div class="row" id="search">
                                <div class="col-md-8 col-sm-6 col-6">
                                    <div class="form-group exampleInput" id="dataTables_filter">
                                        <input class="form-control" id="exampleInput" placeholder="Search">
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-6 col-6">
                                    <button class="btn btn-primary" type="button" id="searchbtn">SEARCH</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table" id="buyerrequest" data-pagination="true">
                            <thead>
                                <tr class="tr">
                                    <th>NOTE TITLE</th>
                                    <th>CATEGORY</th>
                                    <th>BUYER NAME</th>
                                    @*<th>@Html.ActionLink("Sell Type", "BuyerRequest")</th>*@
                                    <th>PRICE</th>
                                    <th>DOWNLOAD DATE</th>
                                    <th> </th>
                                    <th> </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.sellertbl.Title)</td>
                                        <td>@Html.DisplayFor(m => item.categorytbl.CategoryName)</td>
                                        <td>@Html.DisplayFor(m => item.usertbl.EmailID)</td>
                                        <td>@Html.DisplayFor(m => item.sellertbl.SellingPrice)</td>
                                        <td>@Html.DisplayFor(m => item.sellertbl.CreatedDate)</td>
                                        <td>
                                            <img src="~/Content/images/downloads/eye.png" id="view-1" alt="view">
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <img src="~/Content/images/dots.png" class="dropimg" alt="view">
                                                <div class="dropdown-content">
                                                    <a href="#">Allow Download</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--JQuery JS-->
    <script src="~/Scripts/js/jquery.js"></script>

    <!--Bootstrap JS-->
    <script type="text/javascript" src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/Scripts/DataTables/dataTables.bootstrap.js"></script>

