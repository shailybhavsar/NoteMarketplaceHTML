    <!--Navbar Ends-->
    <!--Notes Under Review-->
    <section id="notes-under-review">
        <div class="container">
            <!--Notes Review Heading-->
            <div class="row">
                <div class="col-md-12">
                    <div class="notes-review">
                        <div class="heading">
                            <h3>Notes Under Review</h3>
                        </div>
                    </div>
                </div>
            </div>

            <!--Search Name nd review books-->
            <div class="row">
                <div class="col-md-6 col-sm-6 col-12">
                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-7">
                            <div class="form-group search-name">
                                <p>Seller</p>
                                <select class="form-control custom-select" id="example1">
                                    <option value="">Name</option>
                                    @foreach (var item in @ViewBag.sellername)
                                    {
                                        <option>@item.usertblfordropdown.FirstName</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-sm-6 col-12">
                    <div id="search">
                        <div class="row">
                            <div class="col-md-8 col-sm-6 col-6">
                                <div class="form-group search-note">
                                    <input type="text" class="form-control" id="example" placeholder="Search">
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-6 col-6">
                                <div class="button">
                                    <button class="btn btn-primary" id="searchbtn">SEARCH</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--Table-->
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table" id="notesunderreview">
                            <thead>
                                <tr class="tr">
                                    <th>SR NO.</th>
                                    <th>NOTE TITLE</th>
                                    <th>CATEGORY</th>
                                    <th>SELLER</th>
                                    <th>DATE ADDED</th>
                                    <th>STATUS</th>
                                    <th>ACTION</th>
                                    <th> </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int i = 0;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(i += 1)</td>
                                        <td><a href="@Url.Action("NoteDetails","Admin", new { id=item.sellernotetbl.ID})">@item.sellernotetbl.Title</a></td>
                                        <td>@item.notecategorytbl.CategoryName</td>
                                        <td>@item.usertbl.FirstName  @item.usertbl.LastName<span style="float:right"><a href="@Url.Action("MemberDetails","Admin",new { id=item.usertbl.ID})"><img src="~/Content/images/downloads/eye.png" alt="review"></a></span></td>

                                        <td>@item.sellernotetbl.CreatedDate</td>
                                        @if (item.sellernotetbl.Status == 7)
                                        {
                                            <td>Submitted For Review</td>
                                        }
                                        @if (item.sellernotetbl.Status == 8)
                                        {
                                            <td>InReview</td>
                                        }
                                        <td>
                                            <div id="buttons" style="float: left;">
                                                <a href="@Url.Action("ApproveNotes","Admin",new { id=@item.sellernotetbl.ID})"><button type="button" class="btn btn-primary" id="approve" data-inline="true" onclick="return approvefun()">Approve</button></a>
                                                <button type="button" class="btn btn-primary" id="reject" data-inline="true" data-toggle="modal" data-target="#modal-@item.sellernotetbl.ID">Reject</button>
                                                @if (item.sellernotetbl.Status == 7)
                                                {
                                                    <a href="@Url.Action("ReviewNotes", "Admin", new { id = @item.sellernotetbl.ID })"><button type="submit" class="btn btn-primary" id="inreview" data-inline="true" onclick="return reviewfun()">InReview</button></a>
                                                }
                                                @if (item.sellernotetbl.Status == 8)
                                                {
                                                    <a href="#"><button type="submit" class="btn btn-primary" id="inreview" data-inline="true">Mark Under Review</button></a>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <div class="dropdown" id="dotdropdown">
                                                <img src="~/Content/images/dots.png" class="dropimg" alt="view" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" id="dropdownfor3">
                                                    <a href="@Url.Action("DownloadPdf", "Admin",new { id = item.sellernotetbl.ID })" class="dropdown-item">Download Note</a>
                                                    <a href="@Url.Action("NoteDetails", "Admin",new { id = item.sellernotetbl.ID })" class="dropdown-item">View More Details</a>
                                                </div>
                                            </div>
                                        </td>


                                        <!-- Modal -->
                                        <div class="modal fade" id="modal-@item.sellernotetbl.ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <div class="review text-left">
                                                            <h3>@item.sellernotetbl.Title - @item.notecategorytbl.CategoryName</h3>
                                                        </div>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        @using (Html.BeginForm("RejectNotes", "Admin", new { id = item.sellernotetbl.ID }, FormMethod.Post))
                                                        {
                                                            <div class="comments">
                                                                <label>Remarks</label>
                                                                <textarea class="form-control" placeholder="Write Remarks.." name="Comment" required></textarea>
                                                            </div>

                                                            <div class="submit-btn">
                                                                @*<button type="button" class="btn btn-primary" id="modal-btn1">Reject</button>
                                                                    <button type="button" class="btn btn-primary" id="modal-btn2">Cancel</button>*@
                                                                <button type="submit" class="btn btn-primary report-issue" style="background-color:red; color:white;" onclick="return rejectnote()">Reject</button>
                                                                <button type="button" id="cancel_btn" class="btn btn-secondary" data-dismiss="modal" style="background-color:green; color:white;">Cancel</button>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--Modal Ends-->


                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @Html.Partial("_FooterAdmin")
    <!--JQuery JS-->
    <script src="~/Scripts/js/jquery.js"></script>

    <!--Bootstrap JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>

    <script type="text/javascript" src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/Scripts/DataTables/dataTables.bootstrap.js"></script>

    @section  Scripts{
        <script>
            $(document).ready(function () {
                $.noConflict();
                var table = $('#notesunderreview').DataTable({
                    'sDom': '"top"i',
                    "iDisplayLength": 5,
                    language: {
                        paginate: {
                            next: '<i class="fa fa-angle-right fa-1x"></i>',
                            previous: '<i class="fa fa-angle-left fa-1x"></i>',
                            first: false,
                            last: false
                        }
                    }

                });
                $('select').change(function () {
                    var y = $(this).val();
                    table.columns(3).search(y).draw();

                });

                $("#searchbtn").click(function () {
                    var x = $("#example").val();
                    var y = $('select').val();
                    table.search(x).columns(3).search(y).draw();
                });
            });

            function reviewfun() {
                if (confirm("Via Marking the note in Review-System will let user know that review process has been initiated. Please Press yes to continue")) {
                    return true;
                }
                else {
                    return false;
                }
            }
            function approvefun() {
                if (confirm("If you approve the notes-System will publish the notes over portal.Please press yes to continue.")) {
                    return true;
                }
                else {
                    return false;
                }
            }
            function rejectnote() {
                if (confirm("Are you sure you want to reject seller request??")) {
                    return true;
                }
                else {
                    return false;
                }
            }

            $("#example1").on(function () {
                var textenter = $(this).val();
                $("table tr").each(function (results) {
                    if (results != null) {
                        var id = $(this).find("textarea")
                    }
                });
            });
            function logoutcall() {

                    if (confirm("Are you sure ,you want to Logout??")) {
                        return true;
                    } else {

                        return false;
                    }
                }
                function logout() {

                    if (confirm("Are you sure ,you want to Logout??")) {
                        window.location.href = '@Url.Action("Logout", "NotesMarketPlace")';
                    }
                    else {
                        window.location.href = '@Url.Action("NotesUnderReview", "Admin")';
                    }
                }

        </script>
    }
</body>
</html>
